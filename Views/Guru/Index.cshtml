@model IEnumerable<UCP1_PAW_015_A.Models.Guru>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Nama Guru")
            </th>
            <th>
                @Html.DisplayName("Jenis Kelamin")
            </th>
            <th>
                @Html.DisplayName("Mata Pelajaran")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NamaGuru)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdJeniskelaminNavigation.NamaJeniskelamin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdMatapelajaranNavigation.NamaMatapelajaran)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdGuru"><i class="fa fa-marker fa-lg"></i></a> |
                <a asp-action="Details" asp-route-id="@item.IdGuru"><i class="fas fa-list fa-lg"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.IdGuru"><i class="fa fa-trash-alt fa-lg"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>

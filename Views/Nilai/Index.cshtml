@model IEnumerable<UCP1_PAW_015_A.Models.Nilai>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Nama Siswa")
            </th>
            <th>
                @Html.DisplayName("Jumlah Nilai")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdSiswaNavigation.NamaSiswa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JumlahNilai)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdNilai"><i class="fa fa-marker fa-lg"></i></a> |
                <a asp-action="Details" asp-route-id="@item.IdNilai"><i class="fas fa-list fa-lg"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.IdNilai"><i class="fa fa-trash-alt fa-lg"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
